<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
	android:layout_height="60dp"
    android:background="@color/GlobalBG"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/notifAlbumCover"
		android:src="@drawable/default_cover"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_margin="5dp"
		android:layout_gravity="center"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginLeft="5dp"
		android:gravity="center|left">

		<TextView
			android:id="@+id/notifSongTitleLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#FFFFFF99"
			android:textSize="20sp"
			android:textStyle="bold"
			android:lines="1"
			android:text="@string/albumTitleText"
			android:padding="2dp"/>

		<TextView
			android:id="@+id/notifSongArtistLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#FFFFFF99"
			android:textSize="18sp"
			android:lines="1"
			android:text="@string/albumArtistText"
			android:padding="2dp"/>
	</LinearLayout>
</LinearLayout>